%p
  You are signed in as #{current_user.email}
  = link_to 'Sign Out', destroy_user_session_path(@user), method: :delete

%h1 Dashboard

= form_for @shout do |f|
  = f.hidden_field :content_type, value: 'TextShout'
  = f.fields_for :content do |cform|
    = cform.text_field :body, placeholder: "Shout here!", required: true
    = cform.submit "Shout!"

= form_for @shout do |f|
  = f.hidden_field :content_type, value: 'ImageShout'
  = f.fields_for :content do |cform|
    = cform.file_field :image, required: true
    = cform.submit "Shout!"

= render @shouts


